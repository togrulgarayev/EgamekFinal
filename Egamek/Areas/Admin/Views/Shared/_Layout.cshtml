<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["AdminTitle"] - EGAMEK</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/admin/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="~/admin/vendors/base/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="~/admin/css/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="~/admin/images/favicon.png" />
</head>
<body>
<div class="container-scroller">
    <!-- partial:partials/_navbar.html -->
    <nav class="navbar col-lg-12 col-12 p-0 fixed-top d-flex flex-row">
        <div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-center">
            <a class="navbar-brand brand-logo me-5" asp-area="Default" asp-controller="Home" asp-action="Index"><img style="width: 80px" src="~/assets/img/pad.png" class="me-2" alt="logo" /></a>
            <a class="navbar-brand brand-logo-mini" asp-area="Default" asp-controller="Home" asp-action="Index"><img src="~/assets/img/adminlogo.png" alt="logo" /></a>
        </div>
        <div class="navbar-menu-wrapper d-flex align-items-center justify-content-end">
            <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
                <span class="ti-view-list"></span>
            </button>
            <ul class="navbar-nav navbar-nav-right">
                <li class="nav-item nav-profile dropdown">
                    <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown" id="profileDropdown">
                        <img src="~/assets/img/pppp.jpg" alt="profile" /> @User.Identity.Name
                    </a>
                    <div class="dropdown-menu dropdown-menu-right navbar-dropdown" aria-labelledby="profileDropdown">
                        <a asp-area="Default" asp-controller="Account" asp-action="Logout" class="dropdown-item">
                            <i class="ti-power-off text-primary"></i>
                            Logout
                        </a>
                    </div>
                </li>
            </ul>
            <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
                <span class="ti-view-list"></span>
            </button>
        </div>
    </nav>
    <!-- partial -->
    <div class="container-fluid page-body-wrapper">
        <!-- partial:partials/_sidebar.html -->
        <nav class="sidebar sidebar-offcanvas" id="sidebar">
            <ul class="nav">
                <li class="nav-item">
                    <a class="nav-link" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                        <i class="ti-shield menu-icon"></i>
                        <span class="menu-title">Dashboard</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="Admin" asp-controller="Games" asp-action="Index">
                        <i class="ti-game menu-icon"></i>
                        <span class="menu-title">Games</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="Admin" asp-controller="GameCategory" asp-action="Index">
                        <i class="ti-layers-alt menu-icon"></i>
                        <span class="menu-title">Categories</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="Admin" asp-controller="CommonCategory" asp-action="Index">
                        <i class="ti-list menu-icon"></i>
                        <span class="menu-title">Sections</span>
                    </a>
                </li>
            </ul>
        </nav>
            
        @RenderBody()

    </div>
    <!-- page-body-wrapper ends -->
</div>
            <footer class="footer">
                <div class="d-sm-flex justify-content-center justify-content-sm-between">
                    <span class="text-muted text-center text-sm-left d-block d-sm-inline-block">Copyright © <a asp-area="Default" asp-controller="Home" asp-action="Index" target="_blank">Egamek</a> &nbsp; 2022</span>
                    <span class="text-muted float-none float-sm-right d-block mt-1 mt-sm-0 text-center">Created by: Togrul & Asif & Ismayil</span>
                </div>
            </footer>
            <!-- container-scroller -->
            <!-- plugins:js -->
            <script src="~/admin/vendors/base/vendor.bundle.base.js"></script>
            <!-- endinject -->
            <!-- Plugin js for this page-->
            <script src="~/admin/vendors/chart.js/Chart.min.js"></script>
            <script src="~/admin/js/jquery.cookie.js" type="text/javascript"></script>
            <!-- End plugin js for this page-->
            <!-- inject:js -->
            <script src="~/admin/js/off-canvas.js"></script>
            <script src="~/admin/js/hoverable-collapse.js"></script>
            <script src="~/admin/js/template.js"></script>
            <script src="~/admin/js/todolist.js"></script>
            <!-- endinject -->
            <!-- Custom js for this page-->
            <script src="~/admin/js/dashboard.js"></script>
            <!-- End custom js for this page-->
            @RenderSection("scripts", false)
</body>

</html>
