@model Egamek_Business.ViewModels.CommonCategoryViewModels.CommonCategoryCreateViewModel
@{
    ViewData["Title"] = "Create Section";

}




<div class="container">

    <!-- Outer Row -->
    <div class="row justify-content-center">

        <div class="col-xl-10 col-lg-12 col-md-9">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Create Category</h1>
                                </div>
                                <form class="user" method="post" asp-controller="CommonCategory" asp-action="Create">
                                    <div class="form-group">
                                        <input asp-for="Name" autocomplete="off" class="form-control form-control-user text-center" style="font-size: 15px;"
                                               placeholder="Category Name">
                                        <span class="text-danger" asp-validation-for="Name"></span>
                                    </div>
                                    <button style="font-weight: bold; text-transform: uppercase;" type="submit" class="btn btn-primary btn-user btn-block">
                                        Create
                                    </button>
                                    <hr>
                                </form>
                                <hr>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>

</div>